<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Snippet para mostrar la galería de imágenes del vehículo -->
  <template id="cars_dealersheep_vehicle_gallery_snippet" name="Vehicle Gallery Snippet">
    <t t-name="cars_dealersheep.vehicle_gallery_snippet">
      <section class="s_vehicle_gallery ui-draggable"
               data-oe-type="snippet"
               data-oe-thumbnail="/cars_dealersheep/static/src/img/gallery_thumbnail.png"
               data-oe-drop="true"
               data-snippet-id="vehicle_gallery_snippet">
        <div class="container">
          <h2 class="text-center o_default_snippet_text">Galería de Imágenes</h2>
          <div class="row vehicle-gallery">
            <!-- Aquí se insertarán las imágenes dinámicamente -->
            <!-- Ejemplo estático: -->
            <div class="col-md-3 mb-3">
              <img src="/cars_dealersheep/static/src/img/default_vehicle.png" class="img-fluid rounded shadow-sm" alt="Imagen 1"/>
            </div>
            <div class="col-md-3 mb-3">
              <img src="/cars_dealersheep/static/src/img/default_vehicle.png" class="img-fluid rounded shadow-sm" alt="Imagen 2"/>
            </div>
            <!-- Para integración dinámica, se podría utilizar JS para recorrer vehicle.images -->
          </div>
        </div>
      </section>
    </t>
  </template>
</odoo>
