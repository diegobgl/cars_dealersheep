<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Template del Snippet de Vehículos -->
    <template id="cars_dealersheep_vehicle_snippet" name="Vehicle Snippet">
        <t t-name="cars_dealersheep.vehicle_snippet">
            <!-- Modo Preview: Se muestra solo la imagen de preview si la variable está definida y es true -->
            <t t-if="'snippet_preview' in locals() and snippet_preview">
                <img src="/cars_dealersheep/static/src/img/snippet_preview.png" alt="Preview del Snippet"/>
            </t>
            <!-- Modo Real: Se muestra el contenido dinámico -->
            <t t-else="">
                <div class="container vehicle_snippet oe_structure" data-oe-drop="true">
                    <h2 class="text-center">Catálogo de Vehículos</h2>
                    <div class="vehicle-list"></div>
                </div>
            </t>
        </t>
    </template>
</odoo>
