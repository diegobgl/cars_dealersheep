<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Template que se usa al insertar el snippet en la página -->
    <template id="cars_dealersheep_vehicle_snippet" name="Vehicle Snippet">
        <t t-name="cars_dealersheep.vehicle_snippet">
            <!-- Si no estamos en modo preview (paleta), mostramos el contenido completo -->
            <t t-if="not (request and request.context.get('snippet_preview'))">
                <div class="container vehicle_snippet oe_structure" data-oe-drop="true">
                    <h2 class="text-center">Catálogo de Vehículos</h2>
                    <div class="vehicle-list">
                        <!-- El JS se encargará de inyectar el contenido dinámico -->
                    </div>
                </div>
            </t>
            <!-- En modo preview (en la paleta), mostramos sólo la imagen de preview -->
            <t t-else="">
                <img src="/cars_dealersheep/static/src/img/snippet_preview.png" alt="Snippet Preview"/>
            </t>
        </t>
    </template>
</odoo>
