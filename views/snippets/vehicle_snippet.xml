<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="cars_dealersheep_vehicle_snippet" name="Vehicle Snippet">
        <t t-name="cars_dealersheep.vehicle_snippet">
            <t t-if="request and request.context.get('snippet_preview')">
                <!-- Modo preview: solo una imagen -->
                <img src="/cars_dealersheep/static/description/snippet_preview.png" alt="preview"/>
            </t>
            <t t-else="">
                <!-- Contenido real del snippet -->
                <div class="container vehicle_snippet oe_structure">
                    <h2 class="text-center">Catálogo de Vehículos</h2>
                    <div class="vehicle-list"></div>
                </div>
            </t>
        </t>
    </template>

</odoo>
