<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="cars_dealersheep_vehicle_snippet" name="Vehicle Snippet">
        <t t-name="cars_dealersheep.vehicle_snippet">
            <!-- Para evitar error en editor, fallback a [] -->
            <t t-set="vehicles" t-value="request and request.env and request.env['vehicle.vehicle'].sudo().search([]) or []"/>
            <div class="container vehicle_snippet oe_structure" data-oe-drop="true">
                <h2 class="text-center">Catálogo de Vehículos</h2>
                <div class="vehicle-list">
                    <!-- Este bloque se llenará vía JS en modo edición y vista pública -->
                    <!-- O si quieres, muestras vehicles en el template como fallback -->
                </div>
            </div>
        </t>
    </template>
</odoo>
