<odoo>
    <!-- Plantilla de snippet que llama al contenido real -->
    <template id="vehicle_snippet" name="Vehicle Snippet">
        <t t-name="cars_dealersheep.vehicle_snippet">
            <!-- Se limita a llamar al contenido que definimos antes -->
        </t>
    </template>

    <!-- Registro en la barra de snippets -->
    <template id="external_snippets" inherit_id="website.snippets" priority="10">
        <xpath expr="//div[@id='snippet_structure']" position="inside">
            <t t-snippet="cars_dealersheep.vehicle_snippet"
               name="Vehicle Snippet"
               t-thumbnail="/cars_dealersheep/static/src/img/snippet_thumbnail.png"
               data-preview="/cars_dealersheep/static/src/img/snippet_preview.png"
               data-categories="featured"
            />
        </xpath>
    </template>
</odoo>
