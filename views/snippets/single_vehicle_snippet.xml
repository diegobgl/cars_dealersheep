<odoo>
    <template id="cars_dealersheep_single_vehicle_snippet" name="Single Vehicle Snippet">
        <t t-name="cars_dealersheep.single_vehicle_snippet">
            <section class="s_single_vehicle_snippet ui-draggable"
                     data-oe-type="snippet"
                     data-oe-thumbnail="/cars_dealersheep/static/src/img/single_vehicle_thumbnail.png"
                     data-oe-drop="true"
                     data-snippet-id="single_vehicle_snippet">
                <div class="container oe_structure">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <img src="/cars_dealersheep/static/src/img/default_vehicle.png" alt="Tipo de Vehículo" class="img-fluid"/>
                        </div>
                        <div class="col-md-6">
                            <h2 class="o_default_snippet_text">Tipo de Vehículo</h2>
                            <p class="o_default_snippet_text">Breve descripción e información del vehículo destacado.</p>
                        </div>
                    </div>
                </div>
            </section>
        </t>
    </template>
</odoo>
