<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Improved Single Vehicle Snippet -->
  <template id="cars_dealersheep_single_vehicle_snippet" name="Single Vehicle Snippet">
    <t t-name="cars_dealersheep.single_vehicle_snippet">
      <section class="s_single_vehicle_snippet ui-draggable"
               data-oe-type="snippet"
               data-oe-thumbnail="/cars_dealersheep/static/src/img/single_vehicle_thumbnail.png"
               data-oe-drop="true"
               data-snippet-id="single_vehicle_snippet">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-md-6">
              <figure class="mb-0">
                <img src="/cars_dealersheep/static/src/img/default_vehicle.png" 
                     alt="Vehículo Destacado" 
                     class="img-fluid rounded shadow-sm vehicle-image"/>
              </figure>
            </div>
            <div class="col-md-6">
              <header>
                <h2 class="o_default_snippet_text">Vehículo Destacado</h2>
              </header>
              <article>
                <p class="o_default_snippet_text">
                  Información del vehículo (modelo, año, etc.) que se actualizará dinámicamente.
                </p>
              </article>
            </div>
          </div>
        </div>
      </section>
    </t>
  </template>
</odoo>
