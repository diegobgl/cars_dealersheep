<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Template para la página de detalle de vehículo -->
    <template id="vehicle_detail_page" name="Detalle de Vehículo">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row">
                    <div class="col-md-6">
                        <img t-att-src="'/web/image/vehicle.vehicle/' + str(vehicle.id) + '/image'" class="img-fluid" alt="Imagen de vehículo"/>
                    </div>
                    <div class="col-md-6">
                        <h1 t-esc="vehicle.name"/>
                        <p><strong>Marca:</strong> <span t-esc="vehicle.brand"/></p>
                        <p><strong>Modelo:</strong> <span t-esc="vehicle.model"/></p>
                        <p><strong>Año:</strong> <span t-esc="vehicle.year"/></p>
                        <p><strong>Precio:</strong> <span t-esc="vehicle.price"/> USD</p>
                        <p><strong>Estado:</strong> <span t-esc="vehicle.status"/></p>
                        <p t-if="vehicle.description"><strong>Descripción:</strong> <span t-esc="vehicle.description"/></p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
