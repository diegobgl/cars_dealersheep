<odoo>
    <!-- Plantilla del Snippet -->
    <template id="external_snippets" inherit_id="website.snippets" priority="8">
        <xpath expr="//div[@id='snippet_effect']//t[@t-snippet][last()]" position="after">
            <t t-snippet="cars_dealersheep.vehicle_snippet"
            t-thumbnail="/cars_dealersheep/static/src/img/icon.png"/>
        </xpath>
    </template>


    <!-- Bloque del Snippet en el Website Builder -->
    <template id="vehicle_snippet_block" name="Catálogo de Vehículos">
        <div class="oe_snippet_thumbnail">
            <img src="/cars_dealersheep/static/description/snippet_thumbnail.png"/>
            <span>Catálogo de Vehículos</span>
        </div>
    </template>

    <!-- Categoría del Snippet -->
    <template id="vehicle_snippet_category" name="Snippets de Vehículos">
        <t t-snippet="cars_dealersheep.vehicle_snippet_template"/>
    </template>
</odoo>
