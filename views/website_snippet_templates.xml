<odoo>
    <template id="vehicle_snippet" name="Vehicle Snippet">
        <section class="oe_snippet_body">
            <t t-call="cars_dealersheep.VehicleSnippet"/>
        </section>
    </template>

    <template id="vehicle_snippet_block" name="Vehicle Snippet Block">
        <div class="oe_snippet_thumbnail">
            <!--t-att-srcimg src="/cars_dealersheep/static/description/snippet_thumbnail.png"/-->
            <span>Catálogo de Vehículos</span>
        </div>
    </template>

    <record id="website.snippet_vehicle" model="ir.ui.view">
        <field name="name">Vehicle Snippet</field>
        <field name="key">website.snippet_vehicle</field>
        <field name="arch" type="xml">
            <div class="oe_snippet_body" t-call="cars_dealersheep.VehicleSnippet"/>
        </field>
    </record>
</odoo>
